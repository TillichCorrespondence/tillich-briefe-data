   <text type="postcard">
      <body>
         <div type="handwriting1">
            <pb n="1"/>
            <opener>
               <dateline>
                  <date when="1905-06-27">27.6.05.</date></dateline>
            </opener>
            <p><hi rend="aq">Disputatio fauste ac feliciter finita est.</hi></p>
            <closer>
               <salute>Herzl. Gruß, l. <rs ref="#P01930" type="person">Paul</rs> und gut Hoffen und
                  Gesundheit</salute>
               <signed><rs ref="#P02228" type="person">Onkel Paul</rs>, lic. theol.</signed>
            </closer>
         </div>
         <div type="handwriting2">
            <p>Recht gute Besserung, herzliche Grüße</p>
            <closer><signed>Adolf <unclear cert="low">Ebeling, a.m.</unclear></signed></closer>
         </div>
         <div type="handwriting3">
            <signed>D. tr. <rs ref="#P01926" type="person">V.</rs></signed>
         </div>
      </body>
